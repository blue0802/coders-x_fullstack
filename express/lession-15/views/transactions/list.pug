extends ../index

block content
    .container-md.mt-5
        h1 Transactions
        table.table.table-md.mt-5
            thead
                tr
                    th(scope='col') ID
                    th(scope='col')
                    th(scope='col')
            tbody
                if id
                    tr
                        td(colspan="2")=id.id
                        td
                            a.btn.btn-info.mr-3(href="/transactions/" + id.id + "/is-complete") Check
        div
            a.btn.btn-success(href="/transactions/create") Create