extends ../index

block content
    .container-md.mt-5
        h1 Create Transaction
        form(action="", method="POST")
            div.mt-5
                label Username: 
                select.custom-select(name="idUser")
                    option(selected='') Open this select menu
                    each user in users
                        if !user.isAdmin
                            option(value="" + user.id)=user.username
            div.mt-3
                label Title Book: 
                select.custom-select(name="idBook")
                    option(selected='') Open this select menu
                    each book in books
                        option(value="" + book.id)=book.title
            br
            button.btn.btn-primary Create