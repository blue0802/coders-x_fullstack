extends ../index

block main
    .container.container-sm
        .row.mt-5
            h1 The best sales books for sales training and learning
            .row.row-cols-1.row-cols-md-3.mt-5
                each book in books
                    .col.mb-4
                        .card
                            img.card-img-top(src=book.coverUrl, alt='', style="width: 100px!important")
                            .card-body
                                h5.card-title= book.title
                                p.card-text
                                | This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                            .card-footer
                                a.btn.btn-info.mr-3(href="/books/" + book.id) view
                                if user
                                    if !user.isAdmin    
                                        a.btn.btn-primary(href='/cart/add/' + book.id) Add
                                else
                                    a.btn.btn-primary(href='/cart/add/' + book.id) Add
            if user
                if user.isAdmin    
                    div.mt-5
                        a.btn.btn-success(href="/books/create") New book